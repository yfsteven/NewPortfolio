---
export interface Props {
  title: string;
  description: string;
  tags: string[];
  githubUrl?: string;
  websiteUrl?: string;
  youtubeUrl?: string;
  dataName?: string;
}

const { 
  title, 
  description, 
  tags, 
  githubUrl, 
  websiteUrl, 
  youtubeUrl, 
  dataName 
} = Astro.props;

const tagsString = tags.join(', ');
---

<div 
  class="project border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all dark:bg-gray-900" 
  data-name={dataName || title.toLowerCase()}
  data-tags={tags.join(', ').toLowerCase()}
>
  <h2 class="text-xl font-semibold mb-2">
    <a 
      href={websiteUrl || githubUrl} 
      class="text-gray-800 hover:text-blue-600 dark:text-neutral-100" 
      target="_blank" 
      rel="noopener noreferrer"
    >
      {title}
    </a>
  </h2>
  
  <p class="text-gray-600 mb-3 leading-relaxed text-sm dark:text-neutral-300">
    {description}
  </p>
  
  <div class="flex justify-between items-center">
    <p class="text-gray-500 text-xs dark:text-neutral-300">
      Tags: {tagsString}
    </p>
    
    <div class="flex items-center space-x-2">
      {githubUrl && (
        <a 
          href={githubUrl} 
          class="text-gray-700 hover:text-black dark:text-neutral-300 dark:hover:text-gray-500" 
          target="_blank" 
          rel="noopener noreferrer" 
          title="View on GitHub"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="hover:scale-110 transition-transform">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      )}
      
      {websiteUrl && !githubUrl && (
        <a 
          href={websiteUrl} 
          class="text-gray-700 hover:text-black dark:text-neutral-300 dark:hover:text-gray-500" 
          target="_blank" 
          rel="noopener noreferrer" 
          title="View Website"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="hover:scale-110 transition-transform">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="2" y1="12" x2="22" y2="12"></line>
            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
          </svg>
        </a>
      )}
      
      {youtubeUrl && (
        <a 
          href={youtubeUrl} 
          class="text-red-600 hover:text-red-700 dark:text-red-500 dark:hover:text-red-400" 
          target="_blank" 
          rel="noopener noreferrer" 
          title="Watch on YouTube"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="hover:scale-110 transition-transform">
            <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
          </svg>
        </a>
      )}
    </div>
  </div>
</div>